{
  "manifest_version": 3,

  "name": "LeetCode Tracker",
  "description": "Track your LeetCode progress and review it using forgetting curve algorithm",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "alarms",
    "notifications",
    "webNavigation"
  ],

  "host_permissions": [
    "*://*.leetcode.com/*"
  ],
  
  "content_scripts": [
    {
        "matches": ["https://leetcode.com/problems/*"],
        "js": ["js/vendor.js", "js/content_script.js"]
    }
  ]
}
